pipeline {
    agent docsite 

    stages {
        stage('netrc') {
            steps {
                script {
                    def netrc = String.format("machine api.heroku.com\n  login %s\n  password %s\n", params.Email, params.HEROKU_API_KEY )
                    writeFile(file: "${HOME}/.netrc", text: netrc)
                    sh "heroku whoami"
                }
            }
        }
        
        
    }
}
